{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www": "${workspaceFolder}/api"
            },
            "xdebugSettings": {
                "max_children": 256,
                "max_data": 1024,
                "max_depth": 5
            },
            "log": true
        }
    ]
}
